<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="32dp">

    <!-- Drag handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="#DDDDDD" />

    <!-- Header: icon + title + close -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- File type icon box -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_rounded_card"
            android:backgroundTint="#EEF2FF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_download_border"
                app:tint="@color/brand_blue" />

        </LinearLayout>

        <!-- Title + category -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sheetDocTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sheetCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/brand_blue"
                android:textSize="13sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Close button -->
        <ImageView
            android:id="@+id/sheetBtnClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_rounded_card"
            android:backgroundTint="#F5F5F5"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:tint="@color/gray_text" />

    </LinearLayout>

    <!-- Badge row: file type + status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sheetFileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_card"
            android:backgroundTint="#F0FDF4"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:textColor="#16A34A"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sheetStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_card"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="#F0F0F2" />

    <!-- Info rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_card"
        android:backgroundTint="#F9FAFB"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Description label + value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/gray_text"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.08" />

        <TextView
            android:id="@+id/sheetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#EBEBEB" />

        <!-- Version label + value -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textColor="@color/gray_text"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.08" />

        <TextView
            android:id="@+id/sheetVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Download button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sheetBtnDownload"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_download_border"
        android:drawablePadding="8dp"
        android:text="Download"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="14dp"
        app:iconTint="@color/white" />

</LinearLayout>
